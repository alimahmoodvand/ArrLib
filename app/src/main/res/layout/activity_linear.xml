<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:clickable="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="co.raac.arrlib.MainActivity">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topofscreenbanner"
            android:layout_marginTop="12dp"
            android:background="@drawable/ripple"
            android:onClick="btnClick"
            android:text="Show popup"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/topofscreenbanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottomofscreenbanner"
            android:layout_marginTop="12dp"
            android:background="@drawable/ripple"
            android:onClick="btnClick"
            android:text="Show top of screen banner"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/bottomofscreenbanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topbanner"
            android:layout_marginTop="12dp"
            android:background="@drawable/ripple"
            android:onClick="btnClick"
            android:text="Show bottom of screen banner"
            android:textAlignment="center"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
